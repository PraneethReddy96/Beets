<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="statusBarBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/black</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorBlack</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@color/colorBlack</item>
    </style>

    <style name="RoundedImageViewShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TabAppearance">
        <item name="fontFamily">@font/cabin_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>