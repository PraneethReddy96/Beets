<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.SwipeActivity">


    <TextView
        android:id="@+id/tvSwipeUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_35"
        android:text="@string/swipe_up"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_36"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSwipeUpDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSwipeUp"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_4"
        android:text="@string/personalize"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/grey"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />



    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_80"
        android:id="@+id/animation_view"
        app:lottie_rawRes="@raw/animation"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_below="@id/tvSwipeUpDesc"
        android:layout_above="@id/btnStartWatching"/>



        <Button
            android:id="@+id/btnStartWatching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Watching"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:textAppearance="@style/Widget.AppCompat.ActionButton.CloseMode"
            android:textSize="@dimen/sp_18"
            android:padding="@dimen/dp_10"
          android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:backgroundTint="@color/pink"
            />

</RelativeLayout>